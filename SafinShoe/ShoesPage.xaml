<Page x:Class="SafinShoe.ShoesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafinShoe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShoesPage">

    <Grid  >
        <ListView Name="ShoeListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="900" ></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Image Width="240" Height="240" Grid.Column="0"  Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="5"  >
                            <Image.Source>
                                <Binding Path="ProductImage">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            res/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductTypes.ProductTypeName}" Grid.Row="0" Grid.Column="1"  ></TextBlock>
                        <TextBlock Text="{Binding ProductCategory, StringFormat= Категория: {0}}" Grid.Row="1" Grid.Column="1"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription, StringFormat= Описание товара: {0}}" Grid.Row="2" Grid.Column="1"></TextBlock>
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding ProductManufacturer, StringFormat= Производитель: {0}}"   FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding ProductSupplier, StringFormat= |Поставщик: {0}}"   FontSize="20" ></TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" >
                            <TextBlock Text="{Binding ProductPrice, StringFormat = Цена: {0}}" Grid.Column="2"></TextBlock>
                            <TextBlock Text="{Binding ProductDiscount, StringFormat = | Скидка: {0} %}" Grid.Column="2"></TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="3" Orientation="Horizontal" >
                            <TextBlock Text="{Binding ProductCount, StringFormat = Кол-во на складе: {0} }" ></TextBlock>
                            <TextBlock Text="{Binding ProductUnit}"></TextBlock>
                        </StackPanel>



                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</Page>
