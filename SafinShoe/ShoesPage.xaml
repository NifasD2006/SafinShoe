<Page x:Class="SafinShoe.ShoesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafinShoe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShoesPage" FontFamily="Times New Roman"  >

    <Grid ShowGridLines="True"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="140" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition  ></RowDefinition>
            <RowDefinition Height="20" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="460"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <WrapPanel Orientation="Horizontal" Grid.Row="0">
            <StackPanel Margin="8" Orientation="Horizontal">
                <TextBlock Text="Первый Атрибут:" TextAlignment="Right" Width="160" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch" Width="250" FontSize="15" Height="31" TextChanged="TBoxSearch_TextChanged" ></TextBox>
            </StackPanel>

            <StackPanel Margin="8" Orientation="Horizontal">
                <TextBlock Text="Второй Атрибут:" TextAlignment="Right" Width="160" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch2" Width="250" Height="31" FontSize="15" TextChanged="SearchBox_TextChanged"></TextBox>
            </StackPanel>

        </WrapPanel>

        <WrapPanel Grid.Column="1" Orientation="Horizontal"  Grid.Row="0">
            <StackPanel Margin="8" Orientation="Horizontal">
                <TextBlock Text="Поставщик:" TextAlignment="Right" Width="111" FontSize="20"></TextBlock>
                <ComboBox Name="ComboType" FontSize="15" Width="240" Height="40" Margin="0,0,5,0" SelectionChanged="ComboType_SelectionChanged" >
                    <TextBlock>Все поставщики</TextBlock>
                    <TextBlock> Обувь для вас</TextBlock>
                    <TextBlock> Kari</TextBlock>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" >
                <TextBlock Text="Сортировка по количеству на складе"></TextBlock>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0">
                    <RadioButton Content="По возрастанию" GroupName="Sort" Width="180" FontSize="20" x:Name="RButtonUP" Checked="RButtonUP_Checked"/>
                    <RadioButton Content="По убыванию" GroupName="Sort" Width="180" FontSize="20" x:Name="RButtonDown" Checked="RButtonDown_Checked"/>
                </StackPanel>
            </StackPanel>

        </WrapPanel>


        <ListView Name="ShoeListView" Grid.Row="2" Grid.ColumnSpan="2" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid Background="{Binding DiscountColor}" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="900" ></ColumnDefinition>
                                <ColumnDefinition Width="450"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.RowSpan="5" Grid.Column="0" BorderBrush="Black" BorderThickness="1">
                                <Image Width="240"    Stretch="UniformToFill" HorizontalAlignment="Center"   >
                                    <Image.Source>
                                        <Binding Path="ProductImage">
                                            <Binding.TargetNullValue>
                                                <ImageSource>
                                                    res/picture.png
                                                </ImageSource>
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </Border>

                            
                            <TextBlock Text="{Binding ProductTypes.ProductTypeName}" Grid.Row="0" Grid.Column="1"  ></TextBlock>
                            <TextBlock Text="{Binding ProductCategory, StringFormat= Категория: {0}}" Grid.Row="1" Grid.Column="1"></TextBlock>
                            <TextBlock Text="{Binding ProductDescription, StringFormat= Описание товара: {0}}" Grid.Row="2" Grid.Column="1"></TextBlock>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding ProductManufacturer, StringFormat= Производитель: {0}}"   FontSize="20" ></TextBlock>
                                <TextBlock Text="{Binding ProductSupplier, StringFormat= |Поставщик: {0}}"   FontSize="20" ></TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" >
                                <TextBlock Text="{Binding OldCost, StringFormat = Цена: {0}}" Grid.Column="2" Foreground="{Binding CostColor}" TextDecorations="Strikethrough"></TextBlock>
                                <TextBlock Text="{Binding NewCost}" FontSize="20"  ></TextBlock>
                                <TextBlock Text="{Binding ProductDiscount, StringFormat = | Скидка: {0} %}" Grid.Column="2"></TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" >
                                <TextBlock Text="{Binding ProductCount, StringFormat = Кол-во на  складе: {0} }" ></TextBlock>
                                <TextBlock Text="{Binding ProductUnit}"></TextBlock>
                            </StackPanel>







                        </Grid>
                    </Border>
                   
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</Page>
